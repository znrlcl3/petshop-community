<config xmlns="http://www.navercorp.com/lucy-xss">
    <defenders>
        <defender>
            <n>xssFilter</n>
            <class>com.navercorp.lucy.security.xss.markup.MarkupParser</class>
            <init-param>
                <param name="config-file" value="lucy-xss-markup.xml"/>
            </init-param>
        </defender>
    </defenders>
    
    <filters>
        <filter name="XssFilter" defender="xssFilter">
            <param name="globalAttributes" value="id,class,style,title"/>
            <param name="otherAttributes" value=""/>
        </filter>
    </filters>
</config>